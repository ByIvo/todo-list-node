{
  "name": "todo-list-api",
  "version": "1.0.0",
  "description": "An API that provides a basic Todo function",
  "main": "index.js",
  "scripts": {
    "start": "babel-node ./server.js",
    "test:unit": "NODE_ENV=test mocha -R mocha-lcov-reporter --opts test/unit/mocha.opts test/unit/**/*_spec.js",
    "test:integration": "NODE_ENV=test mocha -R mocha-lcov-reporter --opts test/integration/mocha.opts test/integration/**/*_spec.js",
    "coveralls:unit": "npm run test:unit > coveralls",
